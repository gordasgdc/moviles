{%
  set classes = [
    dom_id ? 'js-view-dom-id-' ~ dom_id,
  ]
%}
<div{{ attributes.addClass(classes).addClass('container rel-1') }}>
  {{ title_prefix }}
  {{ title }}
  {{ title_suffix }}

  {% if header %}
    <div class="row">
      <header class="text-center col-md-6 col-md-offset-3">
        {{ header }}
      </header>
    </div>
  {% endif %}

  {{ exposed }}
  {{ attachment_before }}

  <div class="review-carousel carousel">
    {{ rows }}
  </div>

  {{ empty }}
  {{ pager }}

  {{ attachment_after }}
  {{ more }}

  {% if footer %}
      {{ footer }}
  {% endif %}

  {{ feed_icons }}
</div>
