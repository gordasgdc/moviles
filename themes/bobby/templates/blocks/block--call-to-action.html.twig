{%
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
    label ? 'has-title',
    content['body']['#bundle'] ? 'bundle-' ~ content['body']['#bundle'],
  ]
%}
<div{{ attributes.addClass(classes) }}>
  <div class="ccn-exploded-bg ccn-cta-bg section-lg" data-stellar-background-ratio="0.6">
    {% if content.field_image|render %}
      <div class="ccn-bg-img">{{ content.field_image }}</div>
    {% endif %}
    <div class="container rel-1">
      {% block content %}
        <div class="row">
          <header class="text-center col-md-6 col-md-offset-3">
            {% if content.field_button_text|render %}
              <span class="text-yellow icon-header fa {{content.field_icon_class }}"></span>
            {% endif %}
            {{ title_prefix }}{% if label %}{{ label }} {% endif %}{{ title_suffix }}<h2 class="section-title">{{ content.field_title }}</h2>
            {% if content.field_plain_body|render %}<p class="text-muted">{{ content.field_plain_body }}</p>{% endif %}
          </header>
        </div><!-- /.row -->
        {% if content.field_button_text|render %}
          <div class="btn-section text-center">
            <a href="{{content.field_button_link }}" data-toggle="modal" class="btn btn-b-white">{{content.field_button_text }}</a>
          </div>
        {% endif %}
      {% endblock %}
    </div>
  </div><!-- /.container -->
</div>